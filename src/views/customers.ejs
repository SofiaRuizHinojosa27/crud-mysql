<% include partials/_header %>

<form action="/add" method="post">
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <h3>Client List:</h3>
                        <tr>
                            <th>nÂ°</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% if (data) { %>
                                <% for(var i = 0; i < data.length; i++) { %>
                                  <tr>
                                    <td><%= (i + 1) %></td>
                                    <td><%= data[i].name %></td>
                                    <td><%= data[i].address %></td>
                                    <td><%= data[i].phone %></td>
                                    <td>
                                      <a href="/update/<%= data[i].id %>" class="btn btn-info btn-block">Edit</a>
                                      <a href="/delete/<%= data[i].id %>" class="btn btn-danger btn-block">Delete</a>
                                    </td>
                                  </tr>
                                <% } %>
                              <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <h3>Database Manager</h3>
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" class="form-control" autocomplete="off"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" placeholder="Address" class="form-control" autocomplete="off"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" placeholder="Phone" class="form-control" autocomplete="off"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Save customer</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<% include partials/_footer %>